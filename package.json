{
  "name": "HKNBP",
  "version": "1.0.0",
  "description": "香港網路廣播平臺",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-32bit": "electron-builder --ia32"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HKNBP"
  },
  "homepage": "https://github.com/HKNBP",
  "keywords": [
    "tv",
    "電視",
    "HKNBP",
    "香港網路廣播平臺",
    "港網"
  ],
  "author": "原匙 <hknbp@sourcekey.org>",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^20.44.4",
    "electron-installer-snap": "^4.0.0",
    "electron-packager": "^14.0.1"
  },
  "build": {
    "appId": "org.sourcekey.hknbp.hknbp_electron",
    "icon": "logo.png",
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "freebsd"
      ],
      "executableName": "hknbp"
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict",
      "summary": "TV App"
    },
    "mac": {
      "target": [
        "dmg",
        "pkg"
      ]
    },
    "win": {
      "target": [
        "msi",
        "appx",
        "7z",
        "zip"
      ]
    }
  },
  "dependencies": {}
}
